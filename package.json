{
  "name": "digi-comic-generator",
  "version": "0.0.1",
  "description": "Digi Comic generator",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "build": "npm run copy-files",
    "copy-files": "mkdir -p public && cp -r views/* public/ && cp -r assets public/assets",
    "dev": "netlify dev",
    "lint": "eslint *.js netlify/functions/*.js",
    "lint:fix": "eslint *.js netlify/functions/*.js --fix",
    "format": "prettier --write *.js *.json views/*.html netlify/functions/*.js",
    "format:check": "prettier --check *.js *.json views/*.html netlify/functions/*.js"
  },
  "dependencies": {
    "express": "^4.16.2",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "netlify-cli": "^17.0.0"
  },
  "engines": {
    "node": "22"
  },
  "keywords": [
    "node",
    "express"
  ],
  "license": "Copyright Mr Biffo, all rights reserved"
}
